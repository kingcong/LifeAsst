<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/detail_screen_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13°"
            android:textColor="@color/white_color"
            android:textSize="60dp"
            android:id="@+id/homepager_tv_temputure"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_temputure"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/homepager_tv_city"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊哈"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_city"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="69"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_temputure"
            android:layout_below="@+id/homepager_tv_city"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/homepager_tv_airquality"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气良"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_city"
            android:layout_below="@+id/homepager_tv_city"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/homepager_tv_air"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/bg_tab_pressed"
            android:src="@drawable/setting_press"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/bg_tab_pressed">

        <com.ustc.lifeasst.ui.view.TopNewsViewPager
            android:id="@+id/vp_top_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#a000"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="#fff"
                android:textSize="16sp" />

        </RelativeLayout>
        <!--<com.viewpagerindicator.CirclePageIndicator-->
            <!--android:id="@+id/indicator"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--/>-->

        <com.shizhefei.view.indicator.RecyclerIndicatorView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"></com.shizhefei.view.indicator.RecyclerIndicatorView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="吃"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="喝"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="玩"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="乐"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="猜你喜欢"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>