<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/detail_screen_bg"
        android:orientation="horizontal"
        android:id="@+id/homepager_header_all">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13°"
            android:textColor="@color/white_color"
            android:textSize="60dp"
            android:id="@+id/homepager_tv_temputure"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_temputure"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/homepager_tv_city"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊哈"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_city"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="69"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_temputure"
            android:layout_below="@+id/homepager_tv_city"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/homepager_tv_airquality"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气良"
            android:textColor="@color/white_color"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/homepager_tv_city"
            android:layout_below="@+id/homepager_tv_city"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/homepager_tv_air"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/bg_tab_pressed"
            android:src="@drawable/setting_press"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/bg_tab_pressed">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/roll_view_pager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:rollviewpager_play_delay="3000"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="吃"
            android:id="@+id/homepager_eat_button"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="喝"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="玩"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="乐"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bg_tab_pressed"
        android:text="猜你喜欢"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>