<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAllTheme">

    <LinearLayout
        android:id="@+id/id_switch_friendview_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_friendview_tab_item1"
            android:layout_weight="1"
            android:text="吐槽"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_friendview_tab_item2"
            android:layout_weight="1"
            android:text="推荐"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_friendview_tab_item3"
            android:layout_weight="1"
            android:text="失物招领"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_friendview_tab_item4"
            android:layout_weight="1"
            android:text="求助"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>